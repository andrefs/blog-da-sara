{
  "name": "sardinha",
  "version": "0.0.1",
  "description": "Static page blog using Contentful, CircleCI and Github Pages",
  "main": "build.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-p watch serve",
    "serve": "live-server ./build",
    "start": "node build.js",
    "watch": "gazer --pattern '{src,layouts,helpers,partials}/**/*' node build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrefs/sardinha.git"
  },
  "keywords": [
    "contentful",
    "sardinha",
    "metalsmith",
    "github",
    "circleci"
  ],
  "author": "Andre Santos",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/andrefs/sardinha/issues"
  },
  "homepage": "https://github.com/andrefs/sardinha#readme",
  "dependencies": {
    "contentful-metalsmith": "^0.5.0",
    "glob": "^7.1.0",
    "handlebars": "^4.0.5",
    "metalsmith": "^2.2.0",
    "metalsmith-data-markdown": "0.0.3",
    "metalsmith-markdown": "^0.2.1"
  },
  "devDependencies": {
    "gazer": "^1.0.0",
    "live-server": "^1.1.0",
    "metalsmith-debug": "^1.1.0",
    "npm-run-all": "^3.1.1",
    "run-p": "0.0.0"
  }
}
